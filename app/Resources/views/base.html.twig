<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <meta name="author" content="">
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        <title>{% block title %}Tus Contratos{% endblock %}</title>
        
        {% block stylesheets %}
        {% stylesheets 
            '@bootstrap_css' 
            '@docs_css' 
        %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
        {% endblock %}
        
        <!-- Just for debugging purposes. Don't actually copy this line! -->
        <!--[if lt IE 9]><script src="../../assets/js/ie8-responsive-file-warning.js"></script><![endif]-->

        <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
          <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>
    <body>
        {% block navbar %}
        <!-- navbar -->
        {% endblock %}
        
        <div class="container">
            {% for flashMessage in app.session.flashbag.get('success') %}
                <div class="alert alert-success alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert">
                        <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                    </button>
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('warning') %}
                <div class="alert alert-warning alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert">
                        <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                    </button>
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('danger') %}
                <div class="alert alert-danger alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert">
                        <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                    </button>
                    {{ flashMessage }}
                </div>
            {% endfor %}
        {% block body %}
        
        {% endblock %}
        </div>
        
        <!-- Footer -->
        <footer role="contentinfo" class="bs-docs-footer">
            <div class="container">
                <p>Licencia <a href="http://www.tuscontratos.cl">AA</a>.</p>
                <ul class="bs-docs-footer-links muted">
                    <li>Versión actual v1.0.0</li>
                    <li>·</li>
                    <li><a href="http://www.tuscontratos.cl" target="_blank">Tus Contratos</a></li>
                    <li>·</li>
                    <li><a href="http://www.tuscontratos.cl/terminos" target="_blank">Términos y condiciones de uso</a></li>
                    <li>·</li>
                    <li><a href="http://www.tuscontratos.cl/about/" target="_blank">Sobre nosotros</a></li>
                    <li>·</li>
                    <li><a href="http://www.tuscontratos.cl/soporte" target="_blank">Soporte</a></li>
                    <li>·</li>
                    <li><a href="http://www.tuscontratos.cl/versiones" target="_blank">Versiones</a></li>
                </ul>
            </div>
        </footer>
        
        <!-- Modal -->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
            </div>
          </div>
        </div>
        
        {% block javascripts %}
        <!-- Bootstrap core JavaScript
        ================================================== -->
        <!-- Placed at the end of the document so the pages load faster -->
        {% javascripts filter='yui_js' combine=true
            '@jquery_js' 
            '@bootstrap_js'
        %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
        {% endblock %}
    </body>
</html>
